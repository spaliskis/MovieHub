<div class="container">
  <header id="mainHeader"></header>

  <main>
    <article class="card my-3">
      <h2 class="pl-3">Featured Movie</h2>
      <div class="row no-gutters">
        <div class="col-md-6">
          <div
            id="carouselExampleControls"
            class="carousel slide"
            data-ride="carousel"
          >
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  class="d-block w-100"
                  src="../images/movie_stock.jpg"
                  alt="First slide"
                />
              </div>
              <div class="carousel-item">
                <img
                  class="d-block w-100"
                  src="../images/movieHubLogo.png"
                  alt="Second slide"
                />
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleControls"
              role="button"
              data-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleControls"
              role="button"
              data-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card-body">
            <h2 class="card-title">{{ data.0.title }}</h2>
            <p class="card-text">
              {{ data.0.description }}
            </p>
            <p class="score">★★★☆☆</p>
            <p class="card-text">Release year: {{ data.0.release_year }}</p>
            <a href="movie/{{data.0.show_id}}" class="btn btn-primary read-more-button">Read more</a>
          </div>
        </div>
      </div>
    </article>

    <section>
      <h2 style="color:black;">Best of June</h2>



      <div class="row justify-content-between">
        {{#each data}}
        <article class="card col-md-4 col-xs-6 card-color">
          <img
            class="card-img-top image"
            src="../images/movie_stock.jpg"
            alt=""
          />
          <div class="card-body">
            <h2 class="card-title">{{this.title}}</h2>
            <p class="card-text">{{this.description}}</p>
            <p class="score">★★★☆☆</p>
            <p class="card-text">Release year: {{this.release_year}}</p>
            <a href="movie/{{this.show_id}}" class="btn btn-primary read-more-button">Read more</a>
          </div>
        </article>
      {{/each}}
      </div>
      <hr />
    </section>
  </main>
</div>