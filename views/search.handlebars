<!-- JS file goes here -->
<div onload="onPageLoad()">

  <!-- Most popular content here -->

  <div class="container">
    <header id="mainHeader"></header>

    <main>
      <section>
        <h2 style="color: black">{{queryCount}} search results</h2>
        <div class="row justify-content-evenly">

            {{#unless data.length}}
                <div style="width: 380px; height: 410px;"></div>
            {{/unless}}

            {{#each data}}
                <article class="card col-md-4 col-xs-6 card-color">
                <img
                    class="card-img-top image"
                    src="/images/movie_stock.jpg"
                    alt=""
                />
                <div class="card-body">
                    <h2 class="card-title">{{this.title}}</h2>
                    <p class="card-text">{{this.description}}</p>
                    <p class="score">★★★☆☆</p>
                    <p class="card-text">Release date: {{this.release_year}}</p>
                    <a href="movie/{{this.show_id}}" class="btn btn-primary">Read more</a>
                </div>
                </article>
            {{/each}}

        </div>
        <div class="load-more-button-div">
        <button class="btn btn-outline-success my-4 my-sm-0 custom-search-button" type="button" onclick="loadMoreMovies()">
        Load more
        </button>
        </div>
        <hr />
      </section>
    </main>
  </div>

</div>
<!-- Most popular content ends here -->