<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>
          <form class="form-signin" id="signInForm">
            <div class="form-label-group">
              <input
                type="email"
                id="inputEmail"
                name="email"
                class="form-control customFormInputClass"
                style="border-radius: 0.25rem;"
                placeholder="Email address"
                required
                autofocus
              />
              <label for="inputEmail">Email address</label>
            </div>

            <div class="form-label-group">
              <input
                type="password"
                id="inputPassword"
                name="password"
                class="form-control customFormInputClass"
                style="border-radius: 0.25rem;"
                placeholder="Password"
                required
              />
              <label for="inputPassword">Password</label>
            </div>

            <div class="custom-control custom-checkbox mb-3">
              <input
                type="checkbox"
                class="custom-control-input"
                id="customCheck1"
              />
              <label class="custom-control-label" for="customCheck1">Remember
                password</label>
            </div>
            <h6 class="text-center text-danger" id="LoginError"></h5>
            <button
              class="btn btn-lg btn-primary btn-block text-uppercase customFormButton"
              type="submit"
            >
              Sign in
            </button>
            <div class="hr-or"></div>
            <button
              onclick="location.href='signup';"
              class="btn btn-lg btn-block text-uppercase"
              type="button"
            >
              <i class="signUp"></i>
              Create a new account
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>