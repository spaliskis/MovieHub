<div class="wrapper bg-white mt-sm-5">
    <form id="changeInfo">
        <h4 class="pb-4 border-bottom">User profile</h4>
        <div class="d-flex align-items-start py-3 border-bottom"> <img id="profilePic" src="{{ profile_picture }}" class="img" alt="">
            <div class="pl-sm-4 pl-2" id="img-section"> <b>Profile Picture</b>
                    <p>Accepted file types: .png, .jpg. Less than 1MB</p> 
                      <div class="button-wrap">
                        <label class="btn button" for="upload"><b>Upload Picture</b></label>
                        <input name="picture" id="upload" type="file">
                    </div>
            </div>
        </div>
        <div id="inputs" class="py-2">
            <div class="col-md-12"> <label for="username">Username</label> <input id="username" name="username" type="text" class="bg-light form-control" placeholder="Name"> </div>
            <div class="col-md-12"> <label for="email">Email Address</label> <input id="email" name="email" type="email" class="bg-light form-control" placeholder="user@email.com"> </div>
            <div class="col-md-12"> <label for="password">Password</label> <input id="password" name="password" type="password" class="bg-light form-control" placeholder="Password"> </div>
            <div class="col-md-12"> <label for="rpassword">Re-enter password</label for="rpassword"> <input id="rpassword" name="rpassword" type="password" class="bg-light form-control" placeholder="Password"> </div>

            <h6 class="text-center text-danger" id="UpdateError"></h6>
            <div class="py-3 pb-4 border-bottom"> <span id="buttons"></span><button type="submit" class="btn btn-primary mr-3 custom-saveChanges-button">Save Changes</button> <button class="btn btn-primary mr-3 custom-saveChanges-button">Cancel</button></span> 
        </div>
    </form>
            <div class="d-sm-flex align-items-center pt-3" id="deactivate">
                <div> <b>Deactivate your account</b>
                    <p>You will lose access to ratings, comments, your profile</p>
                </div>
                <div class="ml-auto"> <button type="button" id="deactivate" class="btn danger">Deactivate</button> </div>
            </div>
        </div>
    
</div>